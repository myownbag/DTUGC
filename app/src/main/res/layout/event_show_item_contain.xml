<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >
        <TextView
            android:id="@+id/event_item_show_time_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="时间"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/event_item_show_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/event_item_show_time_lable"
            android:layout_toEndOf="@+id/event_item_show_time_lable"
            android:text="2023-05-16 12:12:12"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/event_item_show_event_type_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="类型"
            />
        <TextView
            android:id="@+id/event_item_show_event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/event_item_show_event_type_lable"
            android:layout_toEndOf="@+id/event_item_show_event_type_lable"
            android:layout_centerInParent="true"
            android:text="阀门"
            />
        <TextView
            android:id="@+id/event_item_show_event_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="开阀指令"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/event_item_show_detail_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="详情:"
            />
        <TextView
            android:id="@+id/event_item_show_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/event_item_show_detail_lable"
            android:layout_toEndOf="@+id/event_item_show_detail_lable"
            />
    </RelativeLayout>
</LinearLayout>